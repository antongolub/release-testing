{
  "workspaces": [
    "packages/foo/*",
    "packages/bar/*"
  ],
  "private": true,
  "name": "@antongolub/release-testing",
  "version": "1.0.0",
  "description": "Testing repo for release tools",
  "main": "index.js",
  "scripts": {
    "clean": "lerna clean --yes && lerna run clean",
    "build": "yarn clean && lerna run --stream build",
    "test": "yarn clean && lerna run --stream test",
    "bootstrap": "lerna bootstrap",
    "release": "multi-semantic-release --execasync --watchspawn",
    "postupdate": "yarn && yarn bootstrap && yarn build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "//github.com/antongolub/release-testing"
  },
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/release-testing/issues"
  },
  "homepage": "https://github.com/antongolub/release-testing#readme",
  "devDependencies": {
    "@qiwi/multi-semantic-release": "^2.1.2",
    "@qiwi/semantic-release-gh-pages-plugin": "1.15.10-beta.5",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.3",
    "@semantic-release/npm": "7.0.3",
    "@semantic-release/release-notes-generator": "9.0.0",
    "docco": "^0.8.0",
    "lerna": "^3.20.2",
    "require-in-the-middle": "^5.0.3",
    "semantic-release": "17.0.3"
  }
}
