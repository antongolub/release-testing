{
  "workspaces": [
    "packages/foo/*",
    "packages/bar/*"
  ],
  "private": true,
  "name": "@antongolub/release-testing",
  "version": "1.0.0",
  "description": "Testing repo for release tools",
  "main": "index.js",
  "scripts": {
    "clean": "lerna clean --yes && lerna run clean",
    "build": "yarn clean && lerna run --stream build",
    "test": "yarn clean && lerna run --stream test",
    "bootstrap": "lerna bootstrap",
    "release": "multi-semantic-release --execasync"
  },
  "repository": {
    "type": "git",
    "url": "//github.com/antongolub/release-testing"
  },
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/release-testing/issues"
  },
  "homepage": "https://github.com/antongolub/release-testing#readme",
  "devDependencies": {
    "@antongolub/semantic-release-git": "^0.0.3",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.2.0",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.4.2",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.2.1",
    "lerna": "^3.16.4",
    "multi-semantic-release": "^1.1.0",
    "require-in-the-middle": "^4.0.0",
    "semantic-release": "15.13.19"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "src/**/*.{js,css}",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
